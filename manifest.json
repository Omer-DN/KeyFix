{
  "manifest_version": 3,
  "name": "KeyFix",
  "version": "2.3",
  "description": "Fix keyboard layout errors with a floating convert button",
"permissions": [
  "activeTab",
  "scripting",
  "commands",
  "storage"
],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Keyboard Layout Fixer"
  },
  "commands": {
    "fix-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Fix selected text keyboard layout"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png"
  },
  "web_accessible_resources": [{
    "resources": ["transTo.png"],
    "matches": ["<all_urls>"]
  }]
}
